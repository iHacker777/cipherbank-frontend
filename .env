# CipherBank Frontend - Environment Configuration
# Copy this file to .env and update with your values

# ====================
# API CONFIGURATION
# ====================

# Main CipherBank API URL (for statements upload and other operations)
REACT_APP_API_BASE_URL=https://cipher.thepaytrix.com/api

# Authentication API URL (centralized auth server)
REACT_APP_API_AUTH_URL=https://testing.thepaytrix.com/api

# ====================
# BUILD CONFIGURATION
# ====================

# Generate source maps in production (set to false for security)
GENERATE_SOURCEMAP=false

# Disable CI mode checks
CI=false

# ====================
# APPLICATION SETTINGS
# ====================

# Session timeout in milliseconds (15 minutes = 900000ms)
REACT_APP_SESSION_TIMEOUT=900000

# Token validation interval in milliseconds (5 minutes = 300000ms)
REACT_APP_TOKEN_CHECK_INTERVAL=300000

# Notification display duration in milliseconds
REACT_APP_NOTIFICATION_DURATION=5000

# ====================
# FILE UPLOAD SETTINGS
# ====================

# Maximum file size in bytes (10MB = 10485760 bytes)
REACT_APP_MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
REACT_APP_ALLOWED_EXTENSIONS=.csv,.xls,.xlsx,.pdf

# ====================
# SECURITY SETTINGS
# ====================

# Minimum password length
REACT_APP_PASSWORD_MIN_LENGTH=6

# Enable strict mode security checks
REACT_APP_STRICT_SECURITY=true

# ====================
# FEATURE FLAGS
# ====================

# Enable debug logging (set to false in production)
REACT_APP_DEBUG_MODE=false

# Enable analytics
REACT_APP_ENABLE_ANALYTICS=false

# ====================
# NOTES
# ====================

# 1. Never commit the .env file to version control
# 2. Keep .env.example updated when adding new variables
# 3. Restart the development server after changing .env values
# 4. In production, set these as environment variables in your hosting platform
# 5. The dual API architecture (testing.thepaytrix.com for auth, cipher.thepaytrix.com for operations)
#    is intentional - document the reason for your team
